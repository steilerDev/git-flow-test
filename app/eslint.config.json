{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "xo"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "eslint-plugin-tsdoc"
    ],
    "rules": {
        "quotes": ["error", "backtick"],
        "quote-props": ["error", "always"],
        "indent": ["error", 4],
        "eol-last": ["error", "never"],
        "new-cap": ["error", { "newIsCapExceptions": ["iCloud", "iCloudPhotos", "iCloudAuth", "iCloudError", "iCloudWarning", "iCloudAuthError", "iCPSError"], "capIsNewExceptions": ["TTL"] }],
        "tsdoc/syntax": "warn",
        "no-negated-condition": "off",
        "no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars": ["warn",
        { 
            "argsIgnorePattern": "^_",
            "varsIgnorePattern": "^_",
            "caughtErrorsIgnorePattern": "^_"
        }],
        "guard-for-in":  "off",
        "no-await-in-loop": "off",
        "max-params": "off",
        "no-return-assign": ["error", "except-parens"],
        "no-unreachable": "warn",
        "default-case-last": "off",
        "no-debugger": "warn",
        "no-promise-executor-return": "off",
        "no-unsafe-finally": "off",
        "tsdoc-undefined-tag": "off"
    },
    "overrides": [
        {
            "files": ["*.test.ts"],
            "rules": {
                "max-nested-callbacks": "off"
            }
        }
    ]
}
